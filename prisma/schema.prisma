
generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Investment {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @db.ObjectId
  data        InvestmentData
  user        User      @relation(fields: [userId],references: [id])
}

type InvestmentData {
  title   String
  date    String?
  data    KeyValuePair[]
}

type KeyValuePair{
  key       String
  value     String
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      Name
  email     String   @unique
  emailVerified DateTime?
  password  String
  address   Address?
  role      UserRole @default(USER) 
  investments Investment[]
}
type Address {
  street        String?
  streetnumber  String? 
  city          String?
  zip           String?
  country       String?
  phone         String?
}

enum UserRole {
  USER
  ISSUER
  ADMIN
}

type Name{
  firstname String
  lastname String
}