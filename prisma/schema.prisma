
generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  emailVerified DateTime?
  password  String
  name      Name
  city      String?
  country   String?
  phone     String?
  street    String?
  role      UserRole @default(USER)
}

enum UserRole {
  USER
  ISSUER
}

type Name{
  firstname String
  lastname String
}