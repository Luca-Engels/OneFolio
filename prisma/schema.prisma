
generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      Name
  email     String   @unique
  emailVerified DateTime?
  password  String
  address   Address?
  role      UserRole @default(USER)
}
type Address {
  street        String? @default("Hinzufügen...")
  streetnumber  String? @default("Hinzufügen...") 
  city          String? @default("Hinzufügen...")
  zip           String? @default("Hinzufügen...")
  country       String? @default("Hinzufügen...")
  phone         String? @default("Hinzufügen...")
}

enum UserRole {
  USER
  ISSUER
  ADMIN
}

type Name{
  firstname String
  lastname String
}